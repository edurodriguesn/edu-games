{
  "name": "gameshub",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./views/styles.css",
    "watch:css": "npx tailwindcss -i ./src/styles.css -o ./views/styles.css --watch",
    "dev": "npm run dev:css && npm run start",
    "start": "node app.js", 
    "start:prod": "pm2 start index.js --name \"gameshub\" && pm2 save", 
    "stop:prod": "pm2 stop gameshub",  
    "restart:prod": "pm2 restart gameshub",
    "logs:prod": "pm2 logs gameshub"
  },
