<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= conteudo.titulo %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-4">
    <div class="mx-auto w-3/4 p-6 bg-white shadow-lg rounded-lg overflow-hidden">

        <!-- Título -->
        <div class="p-6">
            <h1 class="text-4xl font-bold mb-4 text-center"><%= conteudo.titulo %></h1>
        </div>

        <!-- Características -->
        <div class="p-6 mx-auto rounded-lg bg-blue-50 w-1/2">
            <p class="text-gray-700 mb-4"><strong>Ano de Lançamento:</strong> <%= conteudo.ano %></p>
            <p class="text-gray-700 mb-4"><strong>Plataforma:</strong> <%= conteudo.plataformas ? conteudo.plataformas.join(', ') : 'N/A' %></p>
            <p class="text-gray-700 mb-4"><strong>Categoria:</strong> <%= conteudo.categorias ? conteudo.categorias.join(', ') : 'N/A' %></p>
            <p class="text-gray-700 mb-4"><strong>Desenvolvedor:</strong> <%= conteudo.desenvolvedores ? conteudo.desenvolvedores.join(', ') : 'N/A' %></p>
        </div>

        <!-- Descrição -->
        <div class="p-6">
            <p class="text-gray-700 mb-4"><%= conteudo.descricao %></p>
            
            <!-- Links Externos -->
            <% if (conteudo.links && conteudo.links.length > 0) { %>
                <div class="mb-4">
                    <h2 class="text-2xl font-bold mb-2">Links Externos</h2>
                    <ul class="list-disc list-inside">
                        <% conteudo.links.forEach(link => { %>
                            <li><a href="<%= link.url %>" class="text-blue-500" target="_blank"><%= link.title %></a></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        </div>

        <!-- Screenshots (Imagens) -->
        <% if (conteudo.imagens && conteudo.imagens.length > 0) { %>
            <div class="p-6 bg-gray-50">
                <h2 class="text-2xl font-bold mb-2">Screenshots</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <% conteudo.imagens.forEach((imagem, index) => { %>
                        <img src="/uploads/<%= conteudo.slug %>/imagem-<%= index + 1 %><%= path.extname(imagem) %>" 
                             alt="imagem-<%= index + 1 %>" class="w-full h-64 object-cover">
                    <% }) %>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>
