<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= jogo.nome %></title>
    <link href="/views/styles.css" rel="stylesheet">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body class="bg-gray-100">
    <%- include('partials/cabecalho')%>
    
    <main class="w-[65%] py-6 px-24 my-8 mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <%- include('partials/central') %>
        <!-- Imagem de capa -->
        <div class="p-6">
            <h1 class="text-5xl font-bold text-center text-gray-800 mb-4"><%= jogo.nome %></h1>
        </div>
        
    
        <div class="flex justify-center items-start space-x-6">
            <% if (jogo.imagens && jogo.imagens.length > 0) { %>
                <div class="mb-8 flex-shrink-0">
                    <img src="data:image/jpeg;base64,<%= jogo.imagens[0] %>" alt="Capa do Jogo" class="h-80 object-cover rounded-lg shadow-md">
                </div>
            <% } %>
            <div class="w-1/2 p-6 text-lg text-gray-700 bg-blue-50 rounded-lg shadow-md h-80">
                <p class="mb-2"><strong>Ano de Lan√ßamento:</strong> <%= jogo.ano %></p>
                <p class="mb-2"><strong>Plataforma:</strong> <%= Array.isArray(jogo.plataformas) ? jogo.plataformas.join(', ') : 'N/A' %></p>
                <p class="mb-2"><strong>Categoria:</strong> <%= Array.isArray(jogo.categorias) ? jogo.categorias.join(', ') : 'N/A' %></p>
                <p class="mb-2"><strong>Conhecimento:</strong> <%= Array.isArray(jogo.conhecimentos) ? jogo.conhecimentos.join(', ') : 'N/A' %></p>
                <p class="mb-2"><strong>Idioma:</strong> <%= Array.isArray(jogo.idiomas) ? jogo.idiomas.join(', ') : 'N/A' %></p>
            </div>
        </div>
        
        <div class="p-6">
            <% if (jogo.links && jogo.links.length > 0) { %>
                <div class="mb-4">
                    <h2 class="text-2xl font-bold mb-4">Links Externos</h2>
                    <div class="grid grid-cols-3 gap-4 md:grid-cols-3">
                        <% jogo.links.forEach(link => { %>
                            <div class="p-4 bg-white shadow-md rounded-lg transform transition-transform hover:scale-105">
                                <a href="<%= link.url %>" class="text-blue-500 hover:underline" target="_blank">
                                    <h3 class="text-xl font-semibold mb-2"><%= link.title %></h3>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %>
            <p class="text-xl text-gray-700 mb-4"><%- jogo.descricao.replace(/\n/g, '<br>') %></p>
        </div>
    
        <!-- Screenshots -->
        <% if (jogo.imagens && jogo.imagens.length > 1) { %>
            <div class="p-6 bg-gray-50">
                <h2 class="text-3xl font-bold mb-2">Screenshots</h2>
                <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                    <% jogo.imagens.slice(1).forEach((imagemBase64, index) => { %>
                        <img 
                            src="data:image/jpeg;base64,<%= imagemBase64 %>" 
                            alt="imagem-<%= index + 1 %>" 
                            class="w-full h-64 object-cover rounded-lg shadow-md cursor-pointer"
                            onclick="showImageModal('data:image/jpeg;base64,<%= imagemBase64 %>')"
                        >
                    <% }) %>
                </div>
            </div>
        
            <!-- Modal -->
            <div id="imageModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-75 hidden z-50">
                <img id="modalImage" src="" alt="Imagem destacada" class="max-w-full max-h-full rounded-lg">
                <button 
                    onclick="closeImageModal()" 
                    class="absolute top-4 right-4 text-white text-3xl font-bold"
                >
                    &times;
                </button>
            </div>
        
        <% } %>
        <% if(jogosRelacionados && jogosRelacionados.length > 0) { %>
            <h2 class="text-2xl font-bold my-4 text-center">Jogos Relacionados</h2>
        <%}%>
        <div class="grid grid-cols-3 gap-4">
            <% jogosRelacionados.forEach(function(jogoRelacionado) { %>
                <div class="game-card max-w-xs bg-white shadow-lg rounded-lg overflow-hidden relative" 
                        data-images='<%= JSON.stringify(jogoRelacionado.imagens) %>'>
                    <a href="/jogos/<%= jogoRelacionado.slug %>">
                        <div class="relative group game-card">
                            <img class="w-full h-48 object-cover" 
                                    src="data:image/jpeg;base64,<%= jogoRelacionado.imagens[0] %>" 
                                    alt="<%= jogoRelacionado.nome %>" 
                                    id="game-image-<%= jogoRelacionado.slug %>">
                        </div>
                        <div class="p-4">
                            <h2 class="text-lg font-bold"><%= jogoRelacionado.nome %></h2>
                        </div>
                    </a>
                </div>
            <% }); %>   
        </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/utils.js"></script>
</body>
</html>
