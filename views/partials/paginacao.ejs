<div class="py-4 mt-6 flex justify-center space-x-2">
    <% if (total > limit) { %>
        <% if (page > 1) { %>
            <!-- botão para ir para a primeira página -->
            <a href="/<%= rota %>page=1&limit=9" 
                class="py-2 px-3 text-blue-700 bg-white border border-blue-700 rounded hover:bg-blue-100 font-bold">
                «
            </a>

            <!-- botão para a página anterior -->
            <a href="/<%= rota %>page=<%= page - 1 %>&limit=9" 
                class="py-2 px-3 text-blue-700 bg-white border border-blue-700 rounded hover:bg-blue-100 font-bold">
                ‹
            </a>
        <% } %>

        <!-- gerar botões para cada página -->
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/<%= rota %>page=<%= i %>&limit=9" 
                class="py-2 px-4 text-blue-700 border border-blue-700 rounded 
                <%= i === page ? 'font-bold bg-blue-100' : 'bg-white hover:bg-blue-100' %>">
                <%= i %>
            </a>
        <% } %>

        <% if (page < totalPages) { %>
            <!-- botão para a próxima página -->
            <a href="/<%= rota %>page=<%= page + 1 %>&limit=9" 
                class="py-2 px-3 text-blue-700 bg-white border border-blue-700 rounded hover:bg-blue-100 font-bold">
                ›
            </a>

            <!-- botão para ir para a última página -->
            <a href="/<%= rota %>page=<%= totalPages %>&limit=9" 
                class="py-2 px-3 text-blue-700 bg-white border border-blue-700 rounded hover:bg-blue-100 font-bold">
                »
            </a>
        <% } %>
    <% } %>
</div>
